{
   "ts-node": {
      "transpileOnly": false,
      "require": [
         "tsconfig-paths/register"
      ]
   },
   "compilerOptions": {
      "lib": [ "DOM", "ES6", "ES2020", "ESNext" ],
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
      "esModuleInterop": true 
   },
   "include": [ "./src/**/*.ts" ],
   "exclude": [ "node_modules" ]
}